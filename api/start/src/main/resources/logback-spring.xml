<configuration>
    <!-- 引入默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} - [%thread] - %-5level - %X{method} - %X{schema} - %X{domain} - %X{uri} - %X{ip} - %X{port} - %X{requestId} - %X{uid} - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 按小时滚动的文件日志配置 -->
    <appender name="FILE_DEFAULT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按小时分割的文件名模式 -->
            <fileNamePattern>logs/app-%d{yyyy-MM-dd_HH}.log</fileNamePattern>
            <!-- 保留30天历史日志 -->
            <maxHistory>30</maxHistory>
            <!-- 可选：启用日志压缩 -->
            <!-- <totalSizeCap>1GB</totalSizeCap> -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - [%thread] - %-5level - %X{method} - %X{schema} - %X{domain} - %X{uri} - %X{ip} - %X{port} - %X{requestId} - %X{uid} - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 设置root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE_DEFAULT"/>
    </root>

    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_DEFAULT"/>
        </root>
    </springProfile>
</configuration>
